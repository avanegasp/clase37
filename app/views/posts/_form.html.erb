
<%= form_for @post, :html =>{:class => "form"}, remote: true do |f| %>
  <div class="form-group">
    <%= f.text_field :title, class:"form-control"  %>
  </div>
  <div class="form-group">
    <%= f.text_field :description, class:"form-control" %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
