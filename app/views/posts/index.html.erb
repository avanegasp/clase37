
<div class="row">
  <div class="col-lg-6">
    <%= render partial: 'form'%>
  </div>
  <div class="col-lg-6">
    <table class="table">
      <thead>
          <th>Título</th>
          <th>Descripción</th>
      </thead>
        <tbody>
          <% @posts.each do |post|%>
              <tr>
                <td><%= post.title%></td>
                <td><%= post.description%></td>
              </tr>
            <% end %>
        </tbody>
    </table>
    <%= link_to 'Crear un post', '/posts/new'%>
  </div>
</div>

<script>
  PostIndexView()
</script>
